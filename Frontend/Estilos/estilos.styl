@import 'nib/vendor'
@import 'nib/gradients'

blue_gradient = #45617D
orange_gradient = #B08F0C
main_blue = #2c3e50
main_orange = #f1c40f
main_silver = #bdc3c7
main_white = #ecf0f1
postit = #fefabc
radial1 = #97d0e1
radial2 = #427388
blue_form = #638CB6
blue_form2 = #78ABDF

vendor-prefixes = o ms moz webkit official 

body
	font-family 'Gloria Hallelujah'
	font-size 16px

header
	background radial-gradient(top, circle cover, radial2, main_blue 80%)
	box-shadow(0px 4px 6px #333)
	padding-top 0.1em
	//padding-left 1em
	//padding-right 1em
	position relative
	overflow hidden
	font-family helvetica
	font-size 18px
	width 100%	
	z-index 2

	.logo
		margin 0
		float left
		width 60px

		img
			width 55px
	
	.titulo
		margin 8px 60px 0 70px
		padding left 0.5em
		padding top 1em		
		a
			color main_white
			font-family 'Russo One', sans-serif
			vertical-align center
			font-size 30px
			text-decoration none

			strong
				color main_orange

section

	h1
		padding 5px
		font-weight 600	
		color white
		text-shadow: -2px 2px 3px main_blue;
		font-size 36px
		span
			color main_orange

	h3
		text-shadow: -2px 2px 3px main_blue;
		font-size 24px


	fieldset
		padding 0px
		border 0px
		margin 2px 2px 2px 2px

	.banner
		position relative
		height 700px
		.banner_logo
			background-color main_blue
			background-size cover
			overflow hidden
			height 100%
			width 100%
			position absolute
			opacity 1
			z-index -1
			opacity 0.8
			//vendor(filter, blur(10px))
			&:after
				content ""
				position absolute
				z-index 1
				height 100%
				width 100%
				background-image url('../images/cooperation.jpg')
				background-size cover
				opacity 0.6
				img
					max-width 100%
					height auto
		.leftcontent
			padding-top 10px
			position absolute
			width 60%	
			height 20%	
			text-align center
			vertical-align middle
			font-family 'Roboto', sans-serif
		    color white
		    box-shadow(0px 4px 6px main_blue)
		    z-index 2		
		.rightcontent
			position absolute
			padding-top 10px
			position absolute
			width 40%	
			height 100%
			text-align center
			margin-left 60%	
			.sign_form
			.start_form
				margin 5% auto 5% auto
				font-family 'Roboto', sans-serif
				width 350px
				text-align center
				border-radius 10px
				padding 10px 10px 10px 10px
				background linear-gradient(top, blue_gradient, main_blue)
				box-shadow(0px 4px 6px main_blue)
				text-align center
				input
					background-color main_blue
					box-shadow 0 -1px 0 0px main_blue
					border-radius 3px
					border 0
					width 300px
					color main_white
					padding 1px 1px 1px 10px
					letter-spacing 2px
					line-height 20px
					font-size 13px
				button
					text-transform uppercase
					letter-spacing 2px
					color main_orange
					width 100px
					font-weight 500
					line-height 20px
					background linear-gradient(top, main_blue, blue_gradient)
					box-shadow 0 -1px 0 0px main_white
					padding 5px 5px 5px 5px
					//border 0
					outline 0
					border 1px 
					border-style solid
					border-color main_orange
					text-shadow 0 1px 0 rgba(0, 0 ,0, .3)
					box-shadow(0px 4px 6px main_blue)
					&:hover
					&:focus
						color main_blue
						transition 1s
						background linear-gradient(top, main_orange, orange_gradient)
				form
					display block
					margin-top 0em
				.form_p
					margin 5px 5px 5px 5px
				.form_b
					margin 5px 5px 5px 5px
				.form_d
					text-align center
					font-size 10px
					color main_orange
					padding .5em
					a
						text-decoration none
						font-size 10px
						padding-left 1em
						&:visited
							color main_orange

					input 
						width 1em
			.sign_form
				height 150px
				button
					width 200px
			.start_form
				height 200px
				//border 1px solid main_orange;
				p.form_tit
					margin 0 0 10px 0
					padding-bottom 10px
					color main_orange
					border-bottom 1px solid main_orange;
	.postpad
		width 60%
		height 100%
		padding 1em
		//box-shadow 0 5px 0 rgba(0,0,0,0.2)
		overflow hidden
		position absolute
		//background linear-gradient(top, white, main_silver)
		z-index 3


		.post_it_left
			position absolute
			margin-top 200px 
			margin-left 50px
			margin-right 50px 
			padding 15px 
			font-family 'Gloria Hallelujah'
			font-style cursive 
			font-size 15px 
			float left
			width 300px 	
			background postit
			color black
			transform(rotate(7deg))
			box-shadow(0px 4px 6px #333)
			z-index 5

		.post_it_center
			clear right
			margin-top 300px
			margin-left 400px
			margin-right 50px 
			padding 15px 
			font-family 'Gloria Hallelujah'
			font-style cursive 
			font-size 15px 
			float left
			width 300px 	
			background main_blue
			color main_white
			transform(rotate(-7deg))
			box-shadow(0px 4px 6px #333)
		
footer
	background #92c7d6
	background radial-gradient(top, circle cover, radial2, main_blue 80%)
	color main_white
	padding 1em 0
	text-align center
	width 100%
	overflow hidden

	h3
		font-size 14px
		font-weight normal

		strong
			display block 

		.starweb
			&:before
			&:after
				content " - "

@media screen and (max-width: 1200px)

	section

		.banner

			.leftcontent
				width 100%
				height 20%
				position relative
			.rightcontent
				width 100%
				margin 0
				position relative
				height auto
				.start_form
					margin auto auto 5% auto
			.postpad
				display none	

@media screen and (max-width: 600px)

	section

		.banner

			.leftcontent
				height 30%