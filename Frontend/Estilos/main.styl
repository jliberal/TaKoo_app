@import 'nib/vendor'
@import 'nib/gradients'

blue_gradient = #45617D
orange_gradient = #B08F0C
main_blue = #2c3e50
main_orange = #f1c40f
main_silver = #bdc3c7
main_white = #ecf0f1
postit = #fefabc
radial1 = #97d0e1
radial2 = #427388
blue_form = #638CB6
blue_form2 = #78ABDF
main_background = #89A4BE

@font-face 
	font-family: iconos
	src url('../fonts/icomoon.eot?2fvpn5');
	src url('../fonts/icomoon.eot?#iefix2fvpn5') format('embedded-opentype')
	src url('../fonts/icomoon.woff?2fvpn5') format('woff')
	src url('../fonts/icomoon.ttf?2fvpn5') format('truetype')
	src url('../fonts/icomoon.svg?2fvpn5#icomoon') format('svg')
	font-weight normal
	font-style normal

body
	font-size 16px
	text-align center
	vertical-align middle

header
	background radial-gradient(top, circle cover, radial2, main_blue 80%)
	box-shadow(0px 4px 6px #333)
	padding-top 0.1em
	position relative
	overflow hidden
	font-family helvetica
	font-size 1.1em
	//width 100%	
	//z-index 2
	.logo
		margin 0
		float left
		width 60px
		img
			width 55px
	
	.titulo
		float left
		margin 8px 0.1em 0 5px
		padding left 0.5em
		padding top 1em		
		a
			color main_white
			font-family 'Russo One', sans-serif
			vertical-align center
			font-size 1.5em
			text-decoration none
		strong
			color main_orange
	.user_name
		margin 8px 1em 0 70%
		//width 20%
		color main_white
		float right

section
	width 100%
	height 700px
	//background-color main_white
	background radial-gradient(top, circle cover, main_silver, main_white 80%)
	padding bottom 1em
	overflow hidden
	.main_section
		width 100%
		height 100%
		margin 0px auto
		position relative
		padding 0.5em 0.5em	0.5em 0.5em	
		.block_menu
			//position absolute
			display table
			float left
			width 200px
			height 200px
			padding 1em 1em 1em 1em
			margin 1em 1em 1em 1em
			//margin auto auto auto auto
			background-color main_blue
			box-shadow(0px 4px 6px #333)
			.block_content
				width 100%
				display table-cell
				vertical-align middle
				//height 100%
				.opcion
					text-decoration none
					color main_orange
					&:visited
						color main_orange
						text-decoration none
					&:after
						display block
						font-family "iconos"
						font-weight bold
						margin 1px 0 0 1px
						text-shadow 1px 1px 0px black
				.icon1
					&:after
						font-size 7em
						content "\e602"
				.icon2
					&:after
						font-size 6em
						content "\e608"
				.icon3
					&:after
						font-size 7em
						content "\e603"


footer
	//background #92c7d6
	//margin-top 4px
	//box-shadow(0px 4px 6px #333)
	background radial-gradient(top, circle cover, radial2, main_blue 80%)
	color main_white
	padding 1em 0
	text-align center
	width 100%
	overflow hidden
	float left
	h3
		font-size 1em
		font-weight normal

		strong
			display block 
		.starweb
			&:before
			&:after
				content " - "